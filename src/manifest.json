{
  "name": "Buedchen",
  "description": "Launch dashboards as full-screen kiosk",
  "manifest_version": 2,
  "version": "5.6.0.3",
  "author": {
    "name": "Tobias Ullrich",
    "email": "github@ullrich.io.com"
  },
  "kiosk_enabled": true,
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["www/js/jquery.min.js","js/wsc-chrome.min.js","js/admin.js","js/main.js"],
      "persistent": false
    }
  },
  "permissions": [
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    {"fileSystem": ["directory","retainEntries"]}
  ],
  "optional_permissions": [ "audioCapture", "videoCapture" ]
}
